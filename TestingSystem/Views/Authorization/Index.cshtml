@model TestingSystem.Models.LoginModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default panel-login" >
                <div class="panel-heading">
                    <h3 class="panel-title">Авторизация</h3>
                </div>
                <div class="panel-body">
                    
                    @using(Html.BeginForm("Login", "Authorization", FormMethod.Post))
                    {

                    <div class="form-group">
                        
                        
                        @Html.LabelFor(x => x.Login)
                        @Html.TextBoxFor(a => a.Login, new {@class = "form-control"})

                        @Html.LabelFor(x => x.Password)
                        @Html.TextBoxFor(a => a.Password, new {@class = "form-control"})
                        
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(a => a.RememberMe) 
                                @Html.LabelFor(a => a.RememberMe, new {@style = "padding-left:0;"})
                            </label>
                        </div>
                    </div>
                    <div class="form-group" align="center">
                        <input type="submit" class="btn btn-primary btn-lg btn-block" value="Вход">
                    </div>
                    
                    }
                </div>
            </div>
        </div>
    </div>
</div>